<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="payment_acquirer_blumonpay" model="payment.acquirer">
            <field name="name">Blumon Pay</field>
            <field name="display_as">Credit Card (powered by Blumon Pay)</field>
            <field name="image_128" type="base64" file="payment_blumonpay/static/src/img/blumon_pay_icon.jpg"/>
            <field name="description" type="html">
                <p>
                    A payment gateway to accept online payments via credit cards, debit cards and bank transfers.
                </p>
                <ul class="list-inline">
                    <li class="list-inline-item"><i class="fa fa-check"/>Online Payment</li>
                </ul>
            </field>
            <field name="module_id" ref="base.module_payment_blumonpay"/>
            <field name="company_id" ref="base.main_company"/>
            <field name="provider">blumonpay</field>
            <field name="payment_flow">s2s</field>
            <field name="registration_view_template_id" ref="blumonpay_s2s_form"/>
        </record>

    </data>
</odoo>
